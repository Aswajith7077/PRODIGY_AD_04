<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gaming_bg2">



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIC TAC TOE"
        android:textColor="@color/white"
        android:fontFamily="@font/pdark"
        android:textSize="48dp"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/turn_layout"
        android:layout_above="@id/play_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="65dp"
        android:layout_marginVertical="20dp"
        android:padding="10dp"
        android:background="@drawable/toggle_property"
        >
        <LinearLayout
            android:id="@+id/turn_x_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="13dp"
            android:background="@drawable/button_bg"
            >

            <ImageView
                android:id="@+id/turn_x"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/anim_x"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/turn_o_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="13dp"
            >
            <ImageView
                android:id="@+id/turn_o"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/anim_o"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@id/home_restart_layout"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/first_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/second_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/third_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/fourth_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/fifth_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/sixth_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/seventh_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/eightth_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
            <ImageView
                android:id="@+id/nineth_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/view_property"
                android:layout_margin="5dp"
                android:padding="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_restart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="15dp"
        android:paddingVertical="30dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Restart"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button_bg"
            android:layout_marginRight="7dp"
            android:drawableLeft="@drawable/refresh_arrow"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Exit"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/exit"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:background="@drawable/button_bg"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>